<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carmemorize.app.activity.Service">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Service"
                android:textSize="22dp"
                android:layout_marginRight="45dp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="1">

            <ImageView
                android:id="@+id/btn_my_car"
                android:layout_width="92dp"
                android:layout_height="87dp"
                android:src="@drawable/radiators" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="1">

            <ImageView
                android:id="@+id/btn_energy"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_weight="0.22"
                android:src="@drawable/tire" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:id="@+id/btn_tax"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/break"
                android:layout_weight="0.47" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:id="@+id/btn_service"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/oil"
                android:layout_weight="0.16" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


